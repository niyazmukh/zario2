<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and evaluation data -->
        <include domain="sharedpref" path="user_session_prefs"/>
        <include domain="sharedpref" path="evaluation_prefs"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences for device transfer -->
        <include domain="sharedpref" path="user_session_prefs"/>
        <include domain="sharedpref" path="evaluation_prefs"/>
    </device-transfer>
</data-extraction-rules>